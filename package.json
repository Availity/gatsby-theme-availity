{
  "name": "gatsby-theme-availity",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "start": "yarn workspace site develop",
    "build": "yarn workspace site build",
    "build:deploy": "yarn workspace site build:deploy",
    "deploy:docs": "npm run build:deploy && gh-pages -d packages/site/public",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "release:ci": "lerna publish --yes"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@commitlint/config-lerna-scopes": "^8.1.0",
    "eslint-config-availity": "^4.0.9",
    "husky": "^3.0.2",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.1",
    "gh-pages": "^2.1.1",
    "prettier": "^1.18.2"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "git add"
    ],
    "*.{md,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  }
}
